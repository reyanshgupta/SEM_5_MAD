<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IVPActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/quizzlerlogo"
        android:background="@color/black"
        android:src="@drawable/ic_quizzler_wo_bg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quizzlerlogo"
        android:text="IVP Quiz!"
        android:id="@+id/IVPTV"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/helvetica_bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    
    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/IVPTV"
        android:padding="10dp"
        android:id="@+id/fragment_container"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Current score: 0"
        android:layout_centerHorizontal="true"
        android:id="@+id/currentScore"
        android:layout_below="@id/fragment_container"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>