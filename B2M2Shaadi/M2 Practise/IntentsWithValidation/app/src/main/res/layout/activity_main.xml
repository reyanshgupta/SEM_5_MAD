<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="THis is activity 1"
    android:id="@+id/tv1ac1"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv1ac1"
        android:text="Press to go to activity 2"
        android:id="@+id/bt1"
        android:onClick="intentDataTransfer"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bt1"
        android:hint="Enter data to be sent - 1 (String)"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et1"
        android:inputType="number"
        android:hint="Enter data to be sent - 2 (Integer) "/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et2"
        android:text="Implicit Intent - Qubitech Corp"/>
</RelativeLayout>